@page
@model SWGlobalTest.Pages.VendorOffersModel
@{
    ViewData["Title"] = Model.Vendor.Name + " Offers";
}

<div class="text-center">
    <h3>@(Model.Vendor.Name + "Offers")</h3>
    <p>@Model.Vendor.Description</p>
</div>

<div class="row">
    @foreach(var item in Model.Offers){
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card rounded shadow m-2">
                <div class="card-header">
                    Name : @item.Name
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Unit Price : @item.UnitPrice</li>
                </ul>
                <div class="card-body">
                    <a asp-page="BuyNow" asp-route-offerId="@item.Id" class="btn btn-primary">Buy Now</a>
                </div>
            </div>
        </div>
    }
</div>