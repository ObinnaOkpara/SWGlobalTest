@page
@model SWGlobalTest.Pages.Offers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @if(!string.IsNullOrWhiteSpace(Model.Errors)){
                <div class="alert alert-danger alert-dismissible">@Model.Errors</div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input asp-for="Offer.VendorId" type="hidden" />

            <div class="form-group">
                <label asp-for="Offer.Name" class="control-label"></label>
                <input asp-for="Offer.Name" class="form-control" />
                <span asp-validation-for="Offer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Description" class="control-label"></label>
                <input asp-for="Offer.Description" class="form-control" />
                <span asp-validation-for="Offer.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.UnitPrice" class="control-label"></label>
                <input asp-for="Offer.UnitPrice" class="form-control" />
                <span asp-validation-for="Offer.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Offer.CanBuyMoreThanOneUnit" /> @Html.DisplayNameFor(model => model.Offer.CanBuyMoreThanOneUnit)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-vendorId="@Model.Offer.VendorId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
