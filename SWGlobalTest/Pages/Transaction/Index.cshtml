<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].OfferName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].UserName)
            </th>
