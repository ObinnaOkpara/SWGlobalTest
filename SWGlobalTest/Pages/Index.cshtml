@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Mobile Billing System</h1>
</div>

<div class="text-center">
    <h3>Vendors</h3>
</div>

<div class="row">
    @foreach(var item in Model.Vendors){
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card rounded shadow m-2">
                <div class="card-header">
                    Name : @item.Name
                </div>
                <div class="card-body">
                    <a asp-page="VendorOffers" asp-route-vendorId="@item.Id" class="btn btn-primary">View Offers</a>
                </div>
            </div>
        </div>
    }
</div>